<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Medico">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:text="Cadastro Medico"
        android:paddingVertical="35dp"
        android:textAlignment="center"
        android:textSize="40sp"
        android:fontFamily="cursive"
        android:textColor="@color/cardview_dark_background"
        android:background="@drawable/medico2"
        android:layout_marginBottom="25dp"
        />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:text="Nome" />

    <EditText
        android:id="@+id/edtNomeMedico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginHorizontal="30dp"
        android:inputType="textPersonName"
        />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:text="CRM" />

    <EditText
        android:id="@+id/edtCrmMedico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginHorizontal="30dp"
        android:inputType="textPersonName"
        />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:text="Patologia" />

    <EditText
        android:id="@+id/edtEspecificacaoMedico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        />

    <Button
        android:id="@+id/btnCadastrarMedico"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="40dp"
        android:layout_gravity="center"
        android:background="@drawable/btnsalvarmedico"
        android:onClick="salvarMedico"/>
</LinearLayout>