<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LiberacaoActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:paddingVertical="35dp"
        android:textAlignment="center"
        android:textSize="40sp"
        android:fontFamily="cursive"
        android:textColor="@color/cardview_dark_background"
        android:background="@drawable/medicamentosliberar"
        android:layout_marginBottom="25dp"
        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:text="Paciente"
        />

    <Spinner
        android:id="@+id/spinnerPaciente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:text="Medico" />

    <Spinner
        android:id="@+id/spinnerMedico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:text="Remedio" />

    <Spinner
        android:id="@+id/spinnerRemedio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"/>

    <Button
        android:id="@+id/btnCadastrarLiberacao"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Efetuar Liberação"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="70dp"
        android:layout_gravity="center"
        android:background="@drawable/btnliberacao"/>

</LinearLayout>